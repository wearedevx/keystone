{
	"configurations": [
    {
			"name": "api",
			"request": "launch",
			"program": "${workspaceRoot}/api/main.go",
			"type": "go",
			"mode": "debug",
			"dlvToolPath": "$HOME/go/bin/dlv",
			"cwd": "${workspaceRoot}",
			"buildFlags": "-ldflags '-X github.com/wearedevx/keystone/api/pkg/jwt.salt=aaP|**P1n}1tqWK'",
			"env": {
				"DB_HOST": "127.0.0.1",
				"DB_PORT": "5432",
				"JWT_SALT": "aaP|**P1n}1tqWK",
				"X_KS_TTL": "a random super secret string"
			}
		},

    {
			"name": "api-prod",
			"request": "launch",
			"program": "${workspaceRoot}/api/main.go",
			"type": "go",
			"mode": "debug",
			"dlvToolPath": "$HOME/go/bin/dlv",
			"cwd": "${workspaceRoot}",
			"buildFlags": "-ldflags '-X github.com/wearedevx/keystone/api/pkg/jwt.salt=qapnx6sP5S9kaeCjZlOmUvgHtsJnA8plRzsQ9whSvnmmBAL922mctk2PYbDzWOj' ",
